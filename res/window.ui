<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>

    <menu id="main-menu">
        <section>
            <item>
                <attribute name='label' translatable='yes'>Коллекции</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Статусы</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Группы</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Шаблоны</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Справка</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Выход</attribute>
                <!-- <attribute name='action'>app.exit</attribute> -->
            </item>
        </section>
    </menu>

    <object class="GtkApplicationWindow" id="CatalogizatorApp">
    <!-- #MyGtkApp START -->
        <!-- <property name="title">Каталогизатор [Фильмы]</property> -->
        <property name="default-width">1024</property>
        <property name="default-height">768</property>
        <property name="titlebar">

            <object class="GtkHeaderBar">
                <property name="show-title-buttons">True</property>
                <property name="title-widget">
                    <object class="GtkLabel">
                        <property name="label" translatable="yes">Каталогизатор</property>
                        <property name="single-line-mode">True</property>
                        <property name="ellipsize">end</property>
                            <property name="width-chars">5</property>
                        <style>
                            <class name="title"/>
                        </style>
                    </object>
                </property>
                <child type="start">
                    <object class="GtkButton">
                        <property name="icon-name">list-add-symbolic</property>
                    </object>
                </child>
                <child type="start">
                    <object class="GtkButton">
                        <property name="icon-name">edit-find-symbolic</property>
                    </object>
                </child>
                <child type="start">
                    <object class="GtkDropDown" id="collections-list">
                    <!-- <property name="model">
                        <object class="GtkStringList" >
                            <items>
                                <item translatable="yes">Не выбрано</item>
                            </items>
                        </object>
                    </property> -->
                    </object>
                </child>
                <child type="end">
                    <object class="GtkMenuButton">
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="primary">true</property>
                        <property name="direction">GTK_ARROW_DOWN</property>
                        <property name="menu-model">main-menu</property>
                    </object>
                </child>
            </object>
        </property>

        <child>
            <object class="GtkScrolledWindow">
                 <child>
                    <object class="GtkBox" id="main-box">
                    <!-- #main-box START -->
                        <property name="orientation">horizontal</property>
                        <property name="spacing">0</property>

                        <child>
                            <object class="GtkBox">
                                <!-- <property name="maring-top">10</property> -->
                                <property name="orientation">vertical</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Статусы</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Буду смотреть</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Просмотрено</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Не интересно</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Подборки</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Фантастика</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Ужасы</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Боевики</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Заголовок записи</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Тех.данные запси</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Содержание записи</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                    <!-- #main-box END -->
                    </object>
                </child>
            </object>
        </child>
       
    <!-- #MyGtkApp END -->
    </object>

</interface>
