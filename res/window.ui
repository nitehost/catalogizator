<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>

    <menu id="main-menu">
        <section>
            <item>
                <attribute name='label' translatable='yes'>Коллекции</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Статусы</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Группы</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Шаблоны</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Справка</attribute>
                <!-- <attribute name='action'>app.about</attribute> -->
            </item>
            <item>
                <attribute name='label' translatable='yes'>Выход</attribute>
                <!-- <attribute name='action'>app.exit</attribute> -->
            </item>
        </section>
    </menu>

    <object class="GtkApplicationWindow" id="CatalogizatorApp">
    <!-- #MyGtkApp START -->
        <!-- <property name="title">Каталогизатор [Фильмы]</property> -->
        <property name="default-width">1024</property>
        <property name="default-height">768</property>
        <property name="titlebar">

            <object class="GtkHeaderBar">
                <property name="show-title-buttons">True</property>
                <property name="title-widget">
                    <object class="GtkLabel">
                        <property name="label" translatable="yes">Каталогизатор</property>
                        <property name="single-line-mode">True</property>
                        <property name="ellipsize">end</property>
                            <property name="width-chars">5</property>
                        <style>
                            <class name="title"/>
                        </style>
                    </object>
                </property>
                <child type="start">
                    <object class="GtkButton">
                        <property name="icon-name">list-add-symbolic</property>
                    </object>
                </child>
                <child type="start">
                    <object class="GtkButton">
                        <property name="icon-name">edit-find-symbolic</property>
                    </object>
                </child>
                <child type="start">
                    <object class="GtkDropDown" id="collections-list">
                    <!-- <property name="model">
                        <object class="GtkStringList" >
                            <items>
                                <item translatable="yes">Не выбрано</item>
                            </items>
                        </object>
                    </property> -->
                    </object>
                </child>
                <child type="end">
                    <object class="GtkMenuButton">
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="primary">true</property>
                        <property name="direction">GTK_ARROW_DOWN</property>
                        <property name="menu-model">main-menu</property>
                    </object>
                </child>
            </object>
        </property>

        <child>
            <object class="GtkScrolledWindow">
                 <child>
                    <object class="GtkBox" id="main-box">
                    <!-- #main-box START -->
                        <property name="orientation">horizontal</property>
                        <property name="spacing">0</property>

                        <child>
                            <object class="GtkBox">
                                <property name="spacing">5</property>
                                <property name="margin-top">10</property>
                                <property name="margin-bottom">10</property>
                                <property name="margin-start">10</property>
                                <property name="margin-end">10</property>
                                <property name="orientation">vertical</property>

                                <child>
                                    <object class="GtkBox">
                                        <property name="orientation">vertical</property>
                                        <child>
                                            <object class="GtkLabel">
                                                <property name="margin-top">5</property>
                                                <property name="label">Записи</property>
                                                <property name="margin-bottom">10</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton" id="filters-btns">
                                                <property name="label">Все записи [1023]</property>
                                                <property name="active">True</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Избранное [23]</property>
                                                <property name="group">filters-btns</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Архивные [154]</property>
                                                <property name="group">filters-btns</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Удалённые [32]</property>
                                                <property name="group">filters-btns</property>
                                            </object>
                                        </child>

                                    </object>
                                </child>

                                <child>
                                    <object class="GtkBox" id="entries-statuses-filters">
                                        <property name="orientation">vertical</property>

                                        <child>
                                            <object class="GtkLabel">
                                                <property name="margin-top">10</property>
                                                <property name="margin-bottom">10</property>
                                                <property name="label">Статусы</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Буду смотреть (32)</property>
                                                <property name="group">filters-btns</property>
                                                <!-- <property name="active">true</property> -->
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Просмотрено (765)</property>
                                                <property name="group">filters-btns</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Не интересно (12)</property>
                                                <property name="group">filters-btns</property>
                                            </object>
                                        </child>

                                    </object>
                                </child>

                                <child>
                                    <object class="GtkBox" id="entries-groups-filters">
                                        <property name="orientation">vertical</property>

                                        <child>
                                            <object class="GtkLabel">
                                                <property name="margin-top">10</property>
                                                <property name="margin-bottom">10</property>
                                                <property name="label">Подборки</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Фантастика (43)</property>
                                                <property name="group">filters-btns</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Ужасы (76)</property>
                                                <property name="group">filters-btns</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton">
                                                <property name="label">Боевики (9)</property>
                                                <property name="group">filters-btns</property>
                                            </object>
                                        </child>

                                    </object>
                                </child>

                            </object>
                        </child>

                        <child>
                            <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">10</property>
                                <property name="hexpand">true</property>
                                <property name="halign">1</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Заголовок записи</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Тех.данные запси</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Содержание записи</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                    <!-- #main-box END -->
                    </object>
                </child>
            </object>
        </child>
       
    <!-- #MyGtkApp END -->
    </object>

</interface>
